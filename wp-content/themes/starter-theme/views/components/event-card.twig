<article class="event-card" href="{{ event.link }}">
    <a class="event-card__link" href="{{ event.link }}">
        <div class="event-card__img-wrapper">
            {% if event.thumbnail %}
                {% include 'components/picture.twig' with { 
                    picture: event.thumbnail, 
                    class: 'event-card__img',
                    } %}
            {% endif %}
        </div>

        <div class="event-card__content">
            <div class="event-card__header">
                <h3 class="event-card__title">{{ event.title }}</h3>
                <span class="event-card__date">{{ event.date }}</span>
            </div>
            
            <p class="event-card__excerpt">{{ event.excerpt|truncate(30, '...') }}</p>
        </div>
    </a>

    {% include 'components/button.twig' with {
        link: event.link,
        class: 'event-card__button is-normal is-white',
        title: 'En savoir plus',
        icon: 'arrow-right',
        htmlTag: 'a',
    } only %}

    {% set event_id = event.ID ?? event.id %}
    {% if unregister_urls[event_id] is defined %}
        {% include 'components/link.twig' with {
        link: {
            url: unregister_urls[event_id],
            title: 'Se dÃ©sinscrire',
        },
        class: 'my-events__unregister-link',
        router_disabled: true
        } only %}
    {% endif %}
</article>